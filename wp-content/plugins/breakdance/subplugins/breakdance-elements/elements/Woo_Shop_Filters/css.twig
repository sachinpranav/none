%%SELECTOR%% {
  --bde-woo-widgets__chip-background-color: {{ design.chips.background }};
  --bde-woo-widgets__chip-background-color-hover: {{ design.chips.background_hover|default(design.chips.background) }};
  --bde-woo-widgets__chip-text-color: {{ design.chips.typography.color }};
  --bde-woo-widgets__chip-text-color-hover: {{ design.chips.typography.color_hover|default(design.chips.typography.color) }};

  --bde-woo-ratings__star_size: {{ design.rating_filter.star_size.style }};
  {{ macros.spacing_margin_y(design.spacing.container) }}

  {% if design.rating_filter.star_color %}
    --bde-woo-ratings__filled-star-svg: url('data:image/svg+xml;utf8,<svg width="24px" height="24px" fill="%23{{ design.rating_filter.star_color | trim('#') }}" viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><polygon id="Path" points="12 0.587 15.668 8.155 24 9.306 17.936 15.134 19.416 23.413 12 19.446 4.583 23.413 6.064 15.134 0 9.306 8.332 8.155"></polygon></svg>');
    --bde-woo-ratings__empty-star-svg: url('data:image/svg+xml;utf8,<svg width="24px" height="24px" fill="%23{{ design.rating_filter.star_color | trim('#') }}" viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><path d="M12,5.173 L14.335,9.99 L19.64,10.722 L15.779,14.432 L16.721,19.702 L12,17.178 L7.279,19.703 L8.221,14.433 L4.36,10.723 L9.665,9.99 L12,5.173 L12,5.173 Z M12,0.587 L8.332,8.155 L0,9.306 L6.064,15.134 L4.584,23.413 L12,19.446 L19.416,23.412 L17.936,15.133 L24,9.306 L15.668,8.156 L12,0.587 Z" id="Shape"></path></svg>');
  {% endif %}
}

%%SELECTOR%% h2.widgettitle {
  {{ macros.typography(design.typography.titles, globalSettings) }}
  margin-bottom: {{ design.spacing.after_titles.style }};
}

/* Between Filters */
%%SELECTOR%% .widget:not(:last-child) {
  margin-bottom: {{ design.spacing.between_filters.style }};
}

/* Chips */
%%SELECTOR%% .widget_layered_nav_filters ul,
%%SELECTOR%% .widget_rating_filter ul,
%%SELECTOR%% .woocommerce-widget-layered-nav ul {
  gap: {{ design.chips.space_between.style }};
}

%%SELECTOR%% .widget_layered_nav_filters a,
%%SELECTOR%% .wc-layered-nav-rating a,
%%SELECTOR%% .wc-layered-nav-term a {
  {{ macros.spacing_padding_all(design.chips.padding) }}
  {{ macros.typography(design.chips.typography, globalSettings) }}
  {{ macros.borders(design.chips.borders) }}
}

%%SELECTOR%% .wc-layered-nav-term span,
%%SELECTOR%% .widget_layered_nav_filters span,
%%SELECTOR%% .widget_layered_nav_filters bdi {
  {{ macros.typography(design.chips.typography, globalSettings) }}
}

%%SELECTOR%% .widget_layered_nav_filters .chosen a,
%%SELECTOR%% .widget_layered_nav_filters a:hover,
%%SELECTOR%% .wc-layered-nav-term.chosen,
%%SELECTOR%% .wc-layered-nav-rating a:hover,
%%SELECTOR%% .wc-layered-nav-term a:hover,
%%SELECTOR%% .wc-layered-nav-term.chosen a,
%%SELECTOR%% .wc-layered-nav-term.chosen span {
  border-color: {{ design.chips.hover_border }};
  box-shadow: {{ design.chips.hover_shadow.style }};
  {{ macros.typographyWithHoverableColorAndEffects(design.chips.typography) }}
}

%%SELECTOR%% .widget_layered_nav_filters .chosen a,
%%SELECTOR%% .widget_layered_nav_filters a:hover,
%%SELECTOR%% .widget_layered_nav_filters .chosen a span,
%%SELECTOR%% .widget_layered_nav_filters .chosen a bdi,
%%SELECTOR%% .wc-layered-nav-term:hover span,
%%SELECTOR%% .wc-layered-nav-term:hover a {
  {{ macros.typographyWithHoverableColorAndEffects(design.chips.typography) }}
}

/* Active Filters */
%%SELECTOR%% .breakdance-woocommerce .widget_layered_nav_filters ul {
  gap: {{ design.active_filters.space_between.style }};
}

/*
 * Price Filter
 */

/* Button */
{{ macros.atomV1ButtonButton(design.price_filter.button, '%%SELECTOR%% .widget_price_filter .button', 'secondary', breakpoint) }}

%%SELECTOR%% .breakdance-woocommerce .widget_price_filter .price_slider {
  background-color: {{ design.price_filter.bar.background }};
  height: {{ design.price_filter.bar.height.style }};
  {% if design.price_filter.bar.handle.size.style %}
    margin-left: calc({{ design.price_filter.bar.handle.size.style | default('24px')}} / 3);
  	margin-right: calc({{ design.price_filter.bar.handle.size.style | default('24px')}} / 3);
  {% endif %}
}

%%SELECTOR%% .breakdance-woocommerce .ui-slider-range {
  background-color: {{ design.price_filter.bar.selection }};
  height: {{ design.price_filter.bar.height.style }};
}

{% if design.price_filter.bar.height.style or design.price_filter.bar.handle.size.style %}
%%SELECTOR%% .breakdance-woocommerce .ui-slider-handle {
  margin-top: calc(({{ design.price_filter.bar.height.style | default('4px')}} - {{ design.price_filter.bar.handle.size.style | default('24px')}}) / 2 );
}
{% endif %}

{% if design.price_filter.bar.handle.size.style %}
%%SELECTOR%% .breakdance-woocommerce .ui-slider-handle {
  margin-left: calc( -{{ design.price_filter.bar.handle.size.style | default('24px')}} / 2);
}
{% endif %}

%%SELECTOR%% .breakdance-woocommerce .ui-slider-handle {
  background-color: {{ design.price_filter.bar.handle.background }};
  height: {{ design.price_filter.bar.handle.size.style }};
  width: {{ design.price_filter.bar.handle.size.style }};
  {{ macros.borders(design.price_filter.bar.handle.borders) }}
}

%%SELECTOR%% .breakdance-woocommerce .ui-slider-handle:hover {
  border-color: {{ design.price_filter.bar.handle.hover_border }};
  box-shadow: {{ design.price_filter.bar.handle.hover_shadow.style }};
}

%%SELECTOR%% .breakdance-woocommerce .widget_price_filter .price_label {
  {{ macros.typography(design.price_filter.label, globalSettings) }}
}

%%SELECTOR%% .breakdance-woocommerce .widget_price_filter .price_label .from,
%%SELECTOR%% .breakdance-woocommerce .widget_price_filter .price_label .to {
  {{ macros.typography(design.price_filter.value, globalSettings) }}
}

/* Rating Filter */
{% if design.rating_filter.between_stars.style %}
%%SELECTOR%% .breakdance-woocommerce .star-rating {
  width: calc(var(--bde-woo-ratings__star_size) * 5 + {{ design.rating_filter.between_stars.style }} * 4);
}

%%SELECTOR%% .breakdance-woocommerce .star-rating span,
%%SELECTOR%% .breakdance-woocommerce .star-rating {
  background-position: 0 center, calc(var(--bde-woo-ratings__star_size) + {{ design.rating_filter.between_stars.style }}) center, calc(var(--bde-woo-ratings__star_size) * 2 + {{ design.rating_filter.between_stars.style }} * 2) center, calc(var(--bde-woo-ratings__star_size) * 3 + {{ design.rating_filter.between_stars.style }} * 3) center, calc(var(--bde-woo-ratings__star_size) * 4 + {{ design.rating_filter.between_stars.style }} * 4) center;
}
{% endif %}

%%SELECTOR%% .breakdance-woocommerce .widget_rating_filter ul {
  gap: {{ design.rating_filter.space_between.style }};
}

/* Attribute Filters */
%%SELECTOR%% .breakdance-woocommerce .woocommerce-widget-layered-nav ul {
  gap: {{ design.attribute_filter.space_between.style }};
}

{{ macros.atomV1ButtonButton(design.attribute_filter.button, '%%SELECTOR%% .woocommerce-widget-layered-nav-dropdown__submit', 'secondary', breakpoint, globalSettings) }}

