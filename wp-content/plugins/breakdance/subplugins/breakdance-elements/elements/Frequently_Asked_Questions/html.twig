{% if content.settings.items %}
  {% for item in content.settings.items %}
    <li class="bde-faq__item">
       <div class="bde-faq__question js-faq-item">
          <h3 class="bde-faq__title">{{ item.question }}</h3>
            {% if design.item.icon.icon.svgCode is empty and design.item.icon.active_icon.svgCode is empty %}
               <div class="bde-faq__icon bde-faq__icon--rotate">
                 <svg fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 8 12">
                	<path d="M.59 10.59 5.17 6 .59 1.41 2 0l6 6-6 6-1.41-1.41Z" />
              	</svg>
              </div>
          	{% elseif design.item.icon.icon.svgCode and design.item.icon.active_icon.svgCode is empty %}
         	  <div class="bde-faq__icon bde-faq__icon--rotate">
                 {{ design.item.icon.icon.svgCode }}
              </div>
            {% elseif design.item.icon.icon.svgCode and design.item.icon.active_icon.svgCode %}
               <div class="bde-faq__icon bde-faq__icon--inactive">
              {% if design.item.icon.icon.svgCode %}
                  {{ design.item.icon.icon.svgCode }}
              {% endif %}
              </div>
         	  <div class="bde-faq__icon bde-faq__icon--active">
              {% if design.item.icon.active_icon.svgCode %}
                  {{ design.item.icon.active_icon.svgCode }}
              {% endif %}
              </div>
            {% endif %}
      </div>
      <div class="bde-faq__answer">
        <div class="bde-faq__answer-content breakdance-rich-text-styles">
        {{ item.answer }}
        </div>
        {% if item.button.text %}
          {{ macros.atomV1ButtonHtml(item.button, 'bde-faq__btn', design.item.button, 'content.settings.items[' ~ loop.index0 ~ '].button.text') }}
        {% endif %}
      </div>
    </li>
  {% endfor %}
{% endif %}
